@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Quadrant I - Urgent and Important</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ToDo in Model)
                    {
                        @if (ToDo.Quadrant == "Quadrant1" && !ToDo.Completed)
                        {
                            <tr>
                                <td>@ToDo.Task</td>
                                <td>@ToDo.DueDate</td>
                                <td>@ToDo.CategoryId</td>
                                <td>@ToDo.Completed</td>
                                <td>
                                    <!-- Add update and delete buttons -->
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@ToDo.TaskId">Edit</a> <!-- Edit button -->
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@ToDo.TaskId">Delete</a> <!-- Delete button -->
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
